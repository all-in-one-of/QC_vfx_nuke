 Input {
  inputs 0
  name Input
  xpos -40
  ypos -9
 }
 Axis2 {
  display off
  selectable false
  name Global
  xpos -30
  ypos 66
 }
set Nf030650 [stack 0]
 Light2 {
  light_type spot
  rotate {{"-degrees(atan2 ((Light.translate.y-Aim.translate.y),sqrt(pow2(Light.translate.z-Aim.translate.z)+pow2(Light.translate.x-Aim.translate.x))))"} {(Light.translate.z-Aim.translate.z)<=0?180-degrees(atan2((Light.translate.x-Aim.translate.x),abs(Light.translate.z-Aim.translate.z))):-degrees(atan2((Light.translate.x-Aim.translate.x),abs(Light.translate.z-Aim.translate.z)))} {curve}}
  depthmap_slope_bias 0.01
  name Light
  xpos -30
  ypos 162
 }
 Output {
  name Output1
  xpos -40
  ypos 303
 }
push $Nf030650
 Axis2 {
  translate {0 0 5}
  uniform_scale 1.5
  name Aim
  xpos 69
  ypos 162
 }
end_group
