 addUserKnob {20 Shadows_tab l Shadows}
 addUserKnob {41 cast_shadows l "cast shadows" t "When enabled this light will\ncast shadows." T Light.cast_shadows}
 addUserKnob {41 shadow_mode l "shadow mode" t "Select the shadow casting mode:<ul><li>solid - Objects seen from light are considered\nfully solid.</li><li>clipped alpha - Objects casting shadows with\nan alpha below the clipping threshold knob\nallow light to pass. All other alpha values fully\nocclude the light.</li><li>full alpha - Shadow is calculated considering\nhow light is attenuated passing through non\nopaque occluders.</li></ul>" T Light.shadow_mode}
 addUserKnob {41 filter t "Impulse no filtering - each output pixel equals some input pixel\nCubic smooth interpolation between pixels\nKeys cubic a=.50, approximates sync (*)\nSimon cubic a=.75, continuous 2nd derivative (*)\nRifman cubic a=1.0, lots of sharpening (*)\nMitchell mix of sharpening and smoothing (*+)\nParzen approximating B-spline (+)\nNotch hides moir&#233; patterns (+)\n(*) has negative lobes, can produce values that are outside the\nrange of the input pixels.\n(+) not interpolatory, changes pixels even when no movement" T Light.filter}
 addUserKnob {41 scene_epsilon l "scene epsilon" t "Scene epsilon for occlusion\ntesting." T Light.scene_epsilon}
 addUserKnob {41 samples t "Number of samples for the\nlight when generating soft\nshadows." T Light.samples}
 addUserKnob {41 sample_width l "sample width" t "Size of the light for soft\nshadows. Only relevant\nwhen raytracing." T Light.sample_width}
 addUserKnob {41 depthmap_bias l bias t "Bias for the raytracing or\nshadow map. Bump this number\nup if self shadowing artifacts\nappear in the image." T Light.depthmap_bias}
 addUserKnob {41 depthmap_slope_bias l "slope bias" t "Bias for shadow map, it will be\nscaled in proportion to the local\ngradient. It's used to reduce self\nshadowing artifacts." T Light.depthmap_slope_bias}
 addUserKnob {41 clipping_threshold l "clipping threshold" t "Surface samples below\nthis alpha threshold are\nconsidered transparent." T Light.clipping_threshold}
 addUserKnob {41 shadow_jitter_scale l "jitter scale" t "Amount of jitter used when doing\nPCF for soft shadows. A larger\nnumber results in a softer\nshadow. Not relevant when\nraytracing." T Light.shadow_jitter_scale}
 addUserKnob {41 depthmap_width l "depthmap resolution" t "Resolution of the depth map. Larger\nnumbers will result in a less crunchy\nedge at a sacrifice of speed. Crunchy\nedges can also be fixed by raising the\nnumber of samples instead of\nincreasing the shadowmap size. Not\nrelevant when raytracing." T Light.depthmap_width}
 addUserKnob {41 shadow_mask l "output mask" t "Output the shadow mask into\nthis channel. The mask output\ncan be enabled even if cast\nshadows is not enabled." T Light.shadow_mask}
 addUserKnob {26 gp1 l " " T " "}
 addUserKnob {26 shadow_test l "" +STARTLINE T "Casting shadows from a point light type is not\ncurrently supported in the ScanlineRender node."}
